extends layout

block content
  h1 Números de professores por Escola
  table.table.table-condensed
    tr 
      td.text-center Nome da Escola    
      td.text-center Número de Professores
      td.text-center Sigla da Disciplina
    each row in dados
      tr
        td.text-center #{row.NomeEscola}      
        td.text-center #{row.numeroProfessores}
        td.text-center #{row.Sigla}        
